@model Model.Library.KhachHang

@{
    Layout = null;
}

<div id="register-modal-container">
    @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "register-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-title">
            <p class="register-title">
                đăng ký
            </p>
        </div>
        <div class="form-content">
            <input type="text" id="mkh-control" style="display:none;visibility:hidden" />
            <div class="form-group">
                @Html.LabelFor(x => x.HoTen, "Họ tên:", new { @class = "frm-label" })
                @Html.TextBoxFor(x => x.HoTen, new { @class = "form-control", @id = "hoten-control" })
                <span class="validation-message">Vui lòng không để trống - tối đa 100 ký tự.</span>
            </div>
            <div id="gt-ns-container">
                <div class="form-group" id="gt-container">
                    @Html.LabelFor(x => x.Phai, "Giới tính:", new { @class = "frm-label" })
                    <div class="form-check gt-control">
                        @Html.RadioButtonFor(x => x.Phai, "Nam", new { @class = "form-check-input", @id = "PhaiNam" })
                        <label for="PhaiNam" class="form-check-label frm-label">Nam</label>
                    </div>
                    <div class="form-check gt-control">
                        @Html.RadioButtonFor(x => x.Phai, "Nữ", new { @class = "form-check-input", @id = "PhaiNu" })
                        <label for="PhaiNu" class="form-check-label frm-label">Nữ</label>
                    </div>
                </div>
                <div class="form-group" id="ns-container">
                    @Html.LabelFor(x => x.NgaySinh, "Ngày sinh:", new { @class = "frm-label" })
                    @Html.TextBoxFor(x => x.NgaySinh, new { @class = "form-control", @type = "date", @id = "ngaysinh-control" })
                    <span class="validation-message">Vui lòng chọn ngày.</span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.SoDienThoai, "Số điện thoại", new { @class = "frm-label" })
                @Html.TextBoxFor(x => x.SoDienThoai, new { @class = "form-control", @id = "sdt-control" })
                <span class="validation-message">Vui lòng không để trống - chỉ chấp nhận SĐT có 10 chữ số.</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email, "Email:", new { @class = "frm-label" })
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @id = "email-control" })
                <span class="validation-message">Có thể để trống thông tin này.</span>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.DiaChi, "Địa chỉ:", new { @class = "frm-label" })
                @Html.TextBoxFor(x => x.DiaChi, new { @class = "form-control", @id = "diachi-control" })
                <span class="validation-message">Vui lòng không để trống - tối đa 300 ký tự.</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.TaiKhoan, "Tài khoản: ", new { @class = "frm-label" })
                @Html.TextBoxFor(x => x.TaiKhoan, new { @id = "tk-register-control", @class = "form-control" })
                <span class="validation-message">Vui lòng không để trống - 6-15 ký tự.</span>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.MatKhau, "Mật khẩu: ", new { @class = "frm-label" })
                @Html.PasswordFor(x => x.MatKhau, new { @id = "mk-register-control", @class = "form-control" })
                <span class="validation-message">Vui lòng không để trống - 6-15 ký tự.</span>
            </div>
            <div class="form-group">
                <label class="frm-label">Xác nhận lại mật khẩu:</label>
                <input type="password" id="mkagain-control" class="form-control" />
                <span class="validation-message">Vui lòng nhập lại mật khẩu trên.</span>
            </div>
            <div class="form-group">
                <div class="frm-register-button">
                    <div class="form-control" id="btn-register">Đăng ký</div>
                    <div class="form-control" id="btn-close-register">Đóng</div>
                </div>
            </div>
        </div>
    }
</div>


