@model Model.SanPham

<div id="form-thong-tin">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.DisplayNameFor(x => x.MaSP)
            <br />
            @Html.TextBoxFor(x => x.MaSP, new { @class="form-control"})
        </div>

        <div class="form-group">
            @Html.DisplayNameFor(x => x.TenSP)
            @Html.TextBoxFor(x => x.TenSP, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.DisplayNameFor(x => x.GioiTinh)
            @Html.TextBoxFor(x => x.GioiTinh, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.DisplayNameFor(x => x.MaNCC)
            @Html.TextBoxFor(x => x.MaNCC, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.DisplayNameFor(x => x.LoaiSP)
            @Html.TextBoxFor(x => x.LoaiSP, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.DisplayNameFor(x => x.ChungLoai)
            @Html.TextBoxFor(x => x.ChungLoai, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.DisplayNameFor(x => x.MoTa)
            @Html.TextAreaFor(x => x.MoTa, new { @class = "form-control", @style="min-height: 150px"})
        </div>
        
    }
</div>
