@model Model.Framework.AdminSanPhamInformationModel

@{
    Layout = null;
}

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="flex-container">
        <div class="flex-col">
            <div class="form-group">
                <label>Mã số</label>
                @Html.TextBoxFor(x => x.MaSP, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Nhà cung cấp</label>
                @Html.TextBoxFor(x => x.TenNCC, new { @class="form-control"})
            </div>
            <div class="form-group">
                <label>Tên gọi</label>
                @Html.TextBoxFor(x => x.TenSP, new { @class = "form-control" })
            </div>
        </div>
        <div class="flex-col">
            <div class="form-group">
                <label>Đối tượng hướng đến</label>
                @Html.DropDownListFor(x => x.MaDoiTuong,new SelectList(ViewBag.DoiTuong,"MaDoiTuong","TenDoiTuong",null), "Vui lòng chọn một", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Phân loại</label>
                @Html.DropDownListFor(x => x.MaLoai,new SelectList(ViewBag.Loai,"MaLoai","TenLoai",null), "Vui lòng chọn một", new { @class = "form-control", @id="category-dropdown" })
            </div>
            <div class="form-group">
                <label>Kiểu loại</label>
                @Html.DropDownListFor(x => x.MaCTLoai,new SelectList(ViewBag.CTLoai,"MaCTLoai","TenCTLoai", null), "Vui lòng chọn phân loại trước", new { @class = "form-control", @id="detail-category-dropdown" })
            </div>
        </div>
    </div>
        <div class="form-group">
            <label>Mô tả</label>
            @Html.TextAreaFor(x => x.MoTa, new { @class = "form-control" ,@spellcheck = false, @style="min-height: 10rem",@placeholder="Vui lòng nhập mô tả"})
        </div>
    }
</div>

